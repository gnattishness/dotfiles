[alias]
	lg = log --graph
[core]
	editor = vim
[color]
	ui = auto
[commit]
	gpgsign = true
[fetch]
    recurseSubmodules = on-demand
# Would be nice to have the --rebase-merges option enabled by default whenever rebase is used
# But still have `pull` default to --no-ff
# TODO setup an alias instead?
#	rebase = merges
[pull]
	ff = only
[push]
	default = upstream
    recurseSubmodules = check
[rebase]
    missingCommitsCheck = warn
[rerere]
	enabled = true
[tag]
	gpgsign = true
# diff.algorithm?
